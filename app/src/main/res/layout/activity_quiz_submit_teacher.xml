<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B4DE"
    tools:context="com.example.bhonesh.e_class.quiz_submit_teacher">

    <EditText
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bo1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bo1"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="Question"

        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/bo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Option 1"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/bo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bo1"
        android:layout_alignStart="@+id/bo1"
        android:layout_below="@+id/bo1"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Option 2"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/bo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bo2"
        android:layout_alignStart="@+id/bo2"
        android:layout_below="@+id/bo2"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Option 3"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/bo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bo3"
        android:layout_alignRight="@+id/bo3"
        android:layout_below="@+id/bo3"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Option 3"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bo4"
        android:layout_alignStart="@+id/bo4"
        android:layout_below="@+id/bo4"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="1/2/3/4"
        android:inputType="textPersonName"
        android:text="" />


    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer"
        android:layout_alignStart="@+id/answer"
        android:layout_below="@+id/answer"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="44dp"
        android:text="Next"
        android:background="#2ECC71"

        android:textColor="#FDFEFE"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/qno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bo1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="1"
        android:textSize="60sp" />

    <Button
        android:id="@+id/fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/next"
        android:layout_alignBottom="@+id/next"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:enabled="false"
        android:text="finish"
        android:background="#2ECC71"

        android:textColor="#FDFEFE"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="invisible" />


</RelativeLayout>
