<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e559"

    tools:context="com.example.bhonesh.e_class.create_assign">

    <TextView
        android:id="@+id/a_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="107dp"
        android:text="Assignment-name"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/a_name"
        android:layout_alignStart="@+id/a_name"
        android:layout_below="@+id/sub"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="106dp"
        android:text="Year"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/year"
        android:layout_alignRight="@+id/year"
        android:layout_below="@+id/e2"
        android:layout_marginTop="105dp"
        android:text="Batch"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/a_name"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:ems="10"
        android:inputType="text" />


    <EditText
        android:id="@+id/e2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/sub"
        android:layout_alignStart="@+id/sub"
        android:layout_alignTop="@+id/year"
        android:ems="10"
        android:inputType="number"
        android:text="" />


    <EditText
        android:id="@+id/e3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignLeft="@+id/e2"
        android:layout_alignStart="@+id/e2"
        android:ems="10"
        android:inputType="text"
        android:text="" />


    <Button
        android:id="@+id/Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:layout_toEndOf="@+id/textView17"

        android:layout_toRightOf="@+id/textView17"
        android:background="#2ECC71"
        android:text="Submit"
        android:textColor="#FDFEFE"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/Submit"
        android:layout_alignBottom="@+id/Submit"
        android:layout_alignLeft="@+id/e3"
        android:layout_alignStart="@+id/e3"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:background="#2ECC71"
        android:text="upload"
        android:textColor="#FDFEFE"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>
